@model DoAn2VADT.Database.Entities.Author

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <form asp-controller="Author" asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- Main content -->
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                        <a asp-controller="Author" asp-action="Index" class="breadcrumb-item">Danh sách tác giả</a>
                        <span class="breadcrumb-item active">Thêm tác giả</span>
                    </nav>
                </div>
            </div>
            <!-- Default box -->
            <div class="card-header">
                <div class=" row">
                    <div class=" col-md-6">
                        <strong>DANH SÁCH TÁC GIẢ</strong>
                    </div>
                    <div class=" col-md-6 text-right">
                        <a class=" btn btn-success fas fa-undo-alt" asp-action="Index"></a>
                        <button class="btn btn-primary fas fa-plus-circle " type="submit"></button>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tên tác giả</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class=" row">
                    <div class="form-group col-md-6">
                        <label asp-for="Birthday" class="control-label">Ngày sinh</label>
                        <input asp-for="Birthday" class="form-control" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="font-weight-semibold" for="productBrand">Ảnh đại diện</label>
                        <input name="fThumb" type="file" class="form-control" asp-for="Image" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="HomeTown" class="control-label"></label>
                    <input asp-for="HomeTown" class="form-control" />
                    <span asp-validation-for="HomeTown" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <!-- /.card-body -->
        </form>
    </div>
</div>
