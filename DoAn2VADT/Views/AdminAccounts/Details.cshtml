@model DoAn2VADT.Database.Entities.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">
        <form asp-action="Details">
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                        <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" class="breadcrumb-item">Danh sách </a>
                        <span class="breadcrumb-item active">Chi tiết</span>
                    </nav>
                </div>
            </div>
            <!-- Default box -->

            <div class="card-header">
                <div class="row">
                    <div class=" col-md-6">
                    </div>
                    <div class=" col-md-6 text-right">
                        <a class=" btn btn-primary fas fa-undo-alt" asp-action="Index"></a>
                        <a class=" btn btn-success fas fa-edit" asp-action="Edit" asp-route-id="@Model.Id"> </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="font-weight-semibold" for="ShortDesc">Tên đăng nhập</label>
                    <div class="form-control">@Html.DisplayFor(model => model.Name)</div>
                </div>
                <div class=" row">
                    <div class="form-group col-md-6">
                        <label class="font-weight-semibold" for="ShortDesc">Mật khẩu</label>
                        <div class="form-control">@Html.DisplayFor(model => model.Password)</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="font-weight-semibold" for="productCategory">Quyền </label>
                        @if (Model.Role == 1)
                        {
                            <div class="d-flex align-items-center">
                                <div class="form-control">Admin</div>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <div class="form-control">User</div>
                            </div>
                        }
                    </div>
                </div>
                <div class=" row">
                    <div class="form-group col-md-6">
                        <label class="font-weight-semibold" for="ShortDesc">Ngày tạo</label>
                        <div class="form-control">@Html.DisplayFor(model => model.CreatedAt)</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="font-weight-semibold" for="ShortDesc">Ngày Update</label>
                        <div class="form-control">@Html.DisplayFor(model => model.UpdatedAt)</div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

        </form>
    </section>
    <!-- /.content -->
</div>