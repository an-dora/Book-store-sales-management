@model DoAn2VADT.Database.Entities.Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                        <a asp-controller="Categorie" asp-action="Index" class="breadcrumb-item">Danh sách thể loại</a>
                        <span class="breadcrumb-item active">Xác nhận Edit</span>
                    </nav>
                </div>
            </div>
            <div class="card-header">
                <div class=" row">
                    <div class=" col-md-6">
                        <strong>DANH SÁCH THỂ LOẠI</strong>
                    </div>
                    <div class=" col-md-6 text-right">
                        <a class="btn btn-success fas fa-undo-alt " asp-action="Index"></a>
                        <button class="btn btn-primary fas fa-save" type="submit"></button>
                    </div>

                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="UpdatedAt" />
                        <input type="hidden" asp-for="DeletedAt" />
                        <input type="hidden" asp-for="CreateUserId" />
                        <input type="hidden" asp-for="UpdateUserId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Tên thể loại</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Mô tả</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
