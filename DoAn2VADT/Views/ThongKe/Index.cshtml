@using DoAn2VADT.Database.Entities
@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<DoAn2VADT.Database.Entities.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item active">Thống kê</span>
        </nav>
    </div>
</div>
<div class="card">

    <div class="card-body">
        <form method="post" action="~/ThongKe/Index">
            <div class="row ">
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="input-affix m-v-10">
                                <i class="prefix-icon anticon anticon-search opacity-04"></i>
                                <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Tìm kiếm tài khoản">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-affix m-v-10">
                                <input required name="from_date" type="date" class="form-control" placeholder="Từ ngày" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-affix m-v-10">
                                <input required name="to_date" type="date" class="form-control" placeholder="Đến ngày" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-affix m-v-10">
                                <button type="submit" class="btn btn-success">doanh thu</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @if (@ViewBag.SumToTal == null)
                        {
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <p class="m-b-0">Doanh thu</p>
                                                <h2 class="m-b-0">
                                                    <span>0 VNĐ</span>
                                                </h2>
                                            </div>
                                            <div class="avatar avatar-icon avatar-lg avatar-blue">
                                                <i class="anticon anticon-dollar"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <p class="m-b-0">Đơn hàng</p>
                                                <h2 class="m-b-0">
                                                    <span>0 Đơn hàng</span>
                                                </h2>
                                            </div>
                                            <div class="avatar avatar-icon avatar-lg avatar-red">
                                                <i class="anticon anticon-profile"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="col-md-6 ">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <p class="m-b-0">Doanh thu</p>
                                                <h2 class="m-b-0">
                                                    <span>@ViewBag.SumToTal VND</span>
                                                </h2>
                                            </div>
                                            <div class="avatar avatar-icon avatar-lg avatar-blue">
                                                <i class="anticon anticon-dollar"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <p class="m-b-0">Đơn hàng</p>
                                                <h2 class="m-b-0">
                                                    <span>@ViewBag.GetQuantityOrder Đơn hàng</span>
                                                </h2>
                                            </div>
                                            <div class="avatar avatar-icon avatar-lg avatar-red">
                                                <i class="anticon anticon-profile"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            @*<div class="col-md-4">
                        Tổng doanh thu: <input value="@ViewBag.SumToTal.ToString("#,## VND")" disabled="disabled" type="text" class="form-control" />
                        </div>
                        <div class="col-md-4">
                        Số lượng đơn hàng: <input value="@ViewBag.GetQuantityOrder" disabled="disabled" type="text" class="form-control" />
                        </div>*@
                        }

                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover ">
                    <thead>
                        <tr>
                            <th>Đơn hàng</th>
                            <th>Ngày đặt</th>
                            <th>Thành tiền</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody id="records_table">
                        @if (ViewBag.GetBills == null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.CreatedAt</td>
                                    <td>@item.Total VND</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5 fas fa-eye" asp-controller="Orders" asp-action="OrderDetail" asp-route-id="@item.Id"></a>
                                        <a class="btn btn-danger btn-tone m-r-5 far fa-trash-alt" asp-controller="ThongKe" asp-action="Delete" asp-route-id="@item.Id"></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            foreach (Order b in ViewBag.GetBills)
                            {
                                <tr>
                                    <td>@b.Name</td>
                                    <td>@b.CreatedAt</td>
                                    <td>@b.Total</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5 fas fa-eye" asp-controller="Orders" asp-action="OrderDetail" asp-route-id="@b.Id"></a>
                                        <a class="btn btn-danger btn-tone m-r-5 far fa-trash-alt" asp-controller="ThongKe" asp-action="Delete" asp-route-id="@b.Id"></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="pager-container" list="@Model" asp-controller="ThongKe" asp-route-CatID="@ViewBag.CurrentCateID" asp-action="Index" />
                    </ul>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: '/Search/FindOrder/',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $("#records_table").html("");
                        $("#records_table").html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });
    </script>
}
