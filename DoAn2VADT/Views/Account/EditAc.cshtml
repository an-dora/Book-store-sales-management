@model DoAn2VADT.Database.Entities.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">
        <form asp-action="EditAc">
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-controller="Dash" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                        <a asp-area="Admin" asp-controller="Accounts" asp-action="EditAc" class="breadcrumb-item">Danh sách </a>
                        <span class="breadcrumb-item active">Edit</span>
                    </nav>
                </div>
            </div>
            <!-- Default box -->

            <div class="card-header">
                <div class="row">
                    <div class=" col-md-6">
                    </div>
                    <div class=" col-md-6 text-right">
                        <a class=" btn btn-success fas fa-undo-alt" asp-controller="Dash" asp-action="Index"></a>
                        <button class="btn btn-primary fas fas fa-save " type="submit"></button>
                    </div>
                </div>
            </div>
            <div class="tab-content m-t-15">
                <div class="tab-pane fade show active">
                    <div class="card">
                        <div class="card-body">
                            <input type="hidden" asp-for="CreatedAt" />
                            <input type="hidden" asp-for="UpdatedAt" />
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label class="font-weight-semibold" for="productName">Tên đăng nhập</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" for="productColors">Mật khẩu</label>
                                <input type="text" class="form-control" asp-for="Password">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>